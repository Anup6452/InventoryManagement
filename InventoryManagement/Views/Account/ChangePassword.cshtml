@model ChangePasswordVM

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagement.styles.css" asp-append-version="true" />

<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Sign In</h5>
            <form asp-action="ChangePassword" asp-controller="Account" method="post">
                <p id="UserId" style="display:none;"></p>
                <p class = "text-danger">@ViewBag.Error</p>
              <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control password" id="floatingInput" placeholder="Old Password" autofocus>
                <label for="floatingInput">Old Password</label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
              </div>
              <div class="form-floating mb-3">
                <input asp-for="NewPassword" type="password" class="form-control newPassword" id="floatingInput" placeholder="New Password" autofocus>
                <label for="floatingInput">New Password</label>
                <div><span asp-validation-for="NewPassword" class="text-danger"></span></div>
              </div>
              <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control confirmPassword" id="floatingPassword" placeholder="Confirm Password">
                <label for="floatingPassword">Confirm Password</label>
                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
              </div>
              <div class="d-grid">
                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit" onclick=changePassword()>Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

