@model ChangePasswordVM

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagement.styles.css" asp-append-version="true" />
    <section class="content">
      <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">
  <div class="card card-primary">
<div class="card-header">
<h3 class="card-title">Change Password</h3>
</div>


<form asp-action="ChangePassword" asp-controller="Account" method="post">
    <div class="card-body">
        <div class="form-group">
        <label for="exampleInputPassword1">Old Password</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Old Password">
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        </div>
        <div class="form-group">
        <label for="exampleInputPassword1">New Password</label>
        <input asp-for="NewPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="New Password">
        <div><span asp-validation-for="NewPassword" class="text-danger"></span></div>
        </div>
        <div class="form-group">
        <label for="exampleInputPassword1">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
        <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
        </div>
        </div>
        <div class="card-footer">
            @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary" onclick=changePassword()>Submit</button>
        </div>
    </form>
</div>
</div>
    </div>
  </div>

  </section>


