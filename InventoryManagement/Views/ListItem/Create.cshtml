@model ListVM;

@{
    ViewData["Title"] = "Create";
}

<!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0"><b>Inventory</b>Management</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="~/ListItem/Index">Item List</a></li>
              <li class="breadcrumb-item active">Create Item</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

<div class="btn-group float-right mb-3">
    <a asp-action="Index" class="btn btn-secondary">
        Cancel
    </a>
</div>


<form asp-action="Create" asp-controller="ListItem" method="post" id="mainForm">
    <div class="alert alert-danger" style="display:none" id="alertMessageGroup">
        <div><span asp-validation-for="ListItemName" class="text-danger"></span></div>
    </div>
    <div class="card w-100">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label>Item Name</label> <span class="text-danger">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="ListItemName" class="form-control mb-2 mr-sm-2" id="rolename" placeholder="">
                            <span asp-validation-for="ListItemName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label>Category</label> <span class="text-danger">*</span>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control select2bs4 select2-hidden-accessible" 
                            style="width: 100%;" data-select2-id="17" tabindex="-1" aria-hidden="true" asp-for="ListItemCategoryId" asp-items="@ViewBag.Category">
                                <option value="@null" data-select2-id="19">Select Gender</option>
                                </select>
                            <span asp-validation-for="ListItemName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <input type="submit" id="submit" class="btn btn-primary mr-2" value="Add">
        </div>
    </div>
</form>