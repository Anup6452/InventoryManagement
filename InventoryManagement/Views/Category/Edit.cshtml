@model CategoryVM;

@{
    ViewData["Title"] = "Edit";
}

<!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0"><b>Inventory</b>Management</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="~/Category/Index">Category List</a></li>
              <li class="breadcrumb-item active">Edit Category</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

<div class="btn-group float-right mb-3">
    <a asp-action="Index" class="btn btn-secondary">
        Cancel
    </a>
</div>


<form asp-action="Edit" asp-controller="Category" method="post" id="mainForm">
    <div class="alert alert-danger" style="display:none" id="alertMessageGroup">
        <div><span asp-validation-for="ListItemCategoryName" class="text-danger"></span></div>
    </div>
    <div class="card w-100">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label>Category Name</label> <span class="text-danger">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input asp-for="ListItemCategoryName" class="form-control mb-2 mr-sm-2" id="role_name" placeholder="">
                        </div>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <input type="submit" id="submit" class="btn btn-primary mr-2" value="Update">
        </div>
    </div>
</form>